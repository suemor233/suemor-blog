{
  "name": "suemor-blog",
  "version": "0.3.2",
  "author": "suemor <suemor233@outlook.com>",
  "description": "suemor blog",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suemor233/suemor-blog/issues"
  },
  "homepage": "https://github.com/suemor233/suemor-blog#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suemor233/suemor-blog.git"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "bump": {
    "leading": [
      "pnpm build",
      "pnpm test"
    ],
    "publish": false,
    "tag": true,
    "commit_message": "chore(release): bump @suemor/suemor-blog to v${NEW_VERSION}"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "cross-env NODE_ENV=development next dev -p 3477",
    "analyze": "cross-env NODE_ENV=production ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "build": "cross-env NODE_ENV=production next build",
    "start": "npm run dev",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-path .gitignore . --fix",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:pm2-alone": "cross-env NODE_ENV=production pm2 restart ecosystem.standalone.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js",
    "release": "vv",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:updateSnap": "vitest -u"
  },
  "dependencies": {
    "@giscus/react": "^2.2.4",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.5",
    "framer-motion": "^7.3.5",
    "lodash-es": "^4.17.21",
    "markdown-navbar": "^1.4.3",
    "mobx": "^6.6.2",
    "mobx-react-lite": "^3.4.0",
    "next": "12.3.4",
    "next-seo": "^5.5.0",
    "next-themes": "^0.2.1",
    "randomcolor": "^0.6.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "react-markdown": "^8.0.3",
    "react-message-popup": "1.0.0",
    "react-no-ssr": "^1.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1",
    "umi-request": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@innei/bump-version": "^1.5.5",
    "@next/bundle-analyzer": "^12.3.0",
    "@suemor/eslint-config-react-ts": "1.1.0",
    "@suemor/prettier": "1.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "18.14.4",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@vitejs/plugin-react": "^3.0.1",
    "commitlint": "^17.4.0",
    "cz-git": "^1.4.1",
    "dotenv": "^16.0.2",
    "eslint": "8.35.0",
    "eslint-config-next": "12.3.4",
    "happy-dom": "^8.1.2",
    "husky": "^8.0.3",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.1",
    "typescript": "4.8.4",
    "vite": "4.0.4",
    "vitest": "0.27.3",
    "windicss": "^3.5.6",
    "windicss-webpack-plugin": "^1.7.6"
  }
}
